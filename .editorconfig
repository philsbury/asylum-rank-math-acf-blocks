# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{css,scss}]
end_of_line = lf
insert_final_newline = true
# 2 space indentation
indent_style = space
indent_size = 2
quote_type = single

[*.{js,vue}]
end_of_line = lf
insert_final_newline = true
# 2 space indentation
indent_style = space
indent_size = 4
quote_type = single

[*.php]
end_of_line = lf
insert_final_newline = true
# 2 space indentation
indent_style = space
indent_size = 4
quote_type = single

[*.{blade.php,twig}]
end_of_line = lf
insert_final_newline = true
# 2 space indentation
indent_style = space
indent_size = 4
quote_type = single